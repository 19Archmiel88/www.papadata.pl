{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "incremental": false,
    "paths": {
      "@nestjs/common": ["../../node_modules/@nestjs/common"],
      "@papadata/shared": ["../../libs/shared/dist"],
      "@papadata/shared/*": ["../../libs/shared/dist/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
